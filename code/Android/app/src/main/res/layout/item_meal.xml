<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#201E28"
    android:layout_marginVertical="4dp">

    <!-- Meal Header: Name and Calories -->
    <TextView
        android:id="@+id/meal_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Название приёма пищи"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#fdfdfd" />

    <TextView
        android:id="@+id/meal_details_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Масса: 0 г, Калории: 0 ккал, Белки: 0 г, Жиры: 0 г, Углеводы: 0 г"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="8dp" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginVertical="4dp" />

    <!-- Products List Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Продукты:"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#fdfdfd"
        android:layout_marginTop="4dp" />

    <!-- Products RecyclerView within the meal item -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/products_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fdfdfd"
        android:nestedScrollingEnabled="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_marginVertical="4dp" />
</LinearLayout>
